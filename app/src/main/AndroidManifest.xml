<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.kostopraff.dreamless">
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" />
    <uses-feature
        android:name="android.software.leanback"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:banner="@drawable/dreamless_banner_720"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Leanback">
        <activity
            android:name=".activities.SplashScreen"
            android:theme="@style/SplashTheme"
            android:banner="@drawable/dreamless_banner_720"
            android:icon="@drawable/dreamless_banner_720"
            android:logo="@drawable/dreamless_banner_720"
            android:screenOrientation="landscape">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LEANBACK_LAUNCHER"/>
            </intent-filter>
        </activity>

        <service
            android:label="Dreamless"
            android:name=".DreamPicsum"
            android:exported="true"
            android:permission="android.permission.BIND_DREAM_SERVICE">
            <intent-filter>
                <action android:name="android.service.dreams.DreamService" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </service>

        <activity
            android:name=".activities.MainActivity"
            android:screenOrientation="landscape">
        </activity>

        <activity android:name=".activities.GuidedStepActivity"
            android:theme="@style/Theme.Leanback.GuidedStep"/>
    </application>

</manifest>